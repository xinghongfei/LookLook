                <!--android:layout_weight="1"-->
                <!--android:stateListAnimator="@animator/raise"-->
                <!--android:textColor="@color/text_color"-->
                <!--android:textSize="16sp"/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>